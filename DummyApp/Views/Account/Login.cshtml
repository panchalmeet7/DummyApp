@model DummyApp.Entities.ViewModels.LoginViewModel

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <partial name="_Loginpartial.cshtml" />
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="POST" asp-action="Login" asp-controller="Account">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                        <button type="button" class="btn btn-primary btn-floating mx-1">
                            <i class="bi bi-facebook"></i>
                        </button>

                        <button type="button" class="btn btn-primary btn-floating mx-1">
                            <i class="bi bi-twitter"></i>
                        </button>

                        <button type="button" class="btn btn-primary btn-floating mx-1">
                            <i class="bi bi-linkedin"></i>
                        </button>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">OR</p>
                    </div>

                    <!-- error msg-->
                   <span class="text-danger">@TempData["Error"]</span>

                    <!-- Email input -->
                    <div class="form-outline mb-4 mt-2">
                        <input type="email" id="form3Example3" class="form-control form-control-lg" 
                               asp-for="Email"
                               placeholder="Enter a valid email address" />
                        <label class="form-label">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" id="form3Example4" class="form-control form-control-lg"
                               asp-for="Password"
                               placeholder="Enter password" />
                        <label class="form-label">Password</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label">
                                Remember me
                            </label>
                        </div>
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account?
                            <a asp-action="Registration" asp-controller="Account"
                               class="link-danger">Register</a>
                        </p>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
